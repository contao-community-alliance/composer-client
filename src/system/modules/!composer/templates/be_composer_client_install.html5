                        ?>
                    </td>
                </tr>
                <?php endif; ?>
                <?php if (!empty($homepage)): ?>
                <tr>
                    <th><?php echo $GLOBALS['TL_LANG']['composer_client']['package_homepage']; ?>:</th>
                    <td>
                        <?php
                        $url = parse_url($homepage);
                        $link = $url['host'];
                        if (!empty($url['path'])) {
