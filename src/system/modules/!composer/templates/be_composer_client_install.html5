                <?php endif; ?>
                <?php if (!empty($support['irc'])): ?>
                <tr>
                    <th>&nbsp;&nbsp;&nbsp;&nbsp;<?php echo $GLOBALS['TL_LANG']['composer_client']['package_support_irc']; ?>:</th>
                    <td>
                        <?php
