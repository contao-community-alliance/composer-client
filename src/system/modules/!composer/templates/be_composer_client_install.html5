                <?php endif; ?>
                <?php endif; ?>
                <?php if (!empty($authors)): ?>
                <tr>
                    <th><?php echo $GLOBALS['TL_LANG']['composer_client']['package_authors']; ?>:</th>
                    <td>
                        <?php
                        echo implode(
                            ', ',
                            array_map(
                                function ($author) {
                                    return sprintf(
                                        '<a href="mailto:%s">%s</a>',
                                        $author['email'],
                                        $author['name']
                                    );
                                },
                                $authors
                            )
