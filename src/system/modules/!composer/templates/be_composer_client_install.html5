    <script type="text/javascript">
        new Fx.Accordion(
            $$('#tl_composer_install .release .toggler'),
            $$('#tl_composer_install .release .details'),
            { "display": <?php echo json_encode($selectedCandidate); ?>, "alwaysHide": true }
        );
